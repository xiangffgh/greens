<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:fitsSystemWindows="true"
    tools:context="com.xiangff.greens.app.home.greens.greendetail.GreenDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_green_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title"
        android:background="@color/title">

        <LinearLayout
            android:id="@+id/ll_greens_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:text="@string/top_back"
                android:textColor="@color/title_fore"
                android:textSize="@dimen/top_title_fore" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10sp"
                android:text="返回"
                android:textColor="@color/title_fore"
                android:textSize="@dimen/top_title_back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/green_detail_title"
            android:textColor="@color/title_fore"
            android:textSize="@dimen/top_title_fore" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/sv_green_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_green_title"
        android:layout_above="@+id/rl_green_detail_bottom"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.yyydjk.library.BannerLayout
                android:background="@color/white"
                android:id="@+id/banner_green_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:autoPlayDuration="5000"
                app:defaultImage="@mipmap/ic_launcher"
                app:indicatorMargin="10dp"
                app:indicatorPosition="rightBottom"
                app:indicatorShape="rect"
                app:indicatorSpace="3dp"
                app:scrollDuration="900"
                app:selectedIndicatorColor="?attr/colorPrimary"
                app:selectedIndicatorHeight="6dp"
                app:selectedIndicatorWidth="6dp"
                app:unSelectedIndicatorColor="#99ffffff"
                app:unSelectedIndicatorHeight="6dp"
                app:unSelectedIndicatorWidth="6dp" />
            <!-- 商品信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_green_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingLeft="10dp"
                    android:text="山东烟台大桃子 16-24个 新鲜水果"
                    android:textSize="18sp"
                    android:textColor="#313131"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/divider"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                >
                <TextView
                    android:id="@+id/tv_green_detail_price_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/green_detail_price"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_green_detail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_green_detail_price_sign"
                    android:layout_toRightOf="@+id/tv_green_detail_price_sign"
                    android:text="0.00"
                    android:textColor="@color/green_detail_price"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/tv_green_detail_originPrice_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tv_green_detail_price_sign"
                    android:text="￥ 50.00"
                    />
                <TextView
                    android:id="@+id/tv_green_detail_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7.2折"
                    android:layout_alignBaseline="@+id/tv_green_detail_originPrice_sign"
                    android:layout_toRightOf="@+id/tv_green_detail_originPrice_sign"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/tv_green_detail_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_green_detail_originPrice_sign"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="本产品为自营产品提供现货，18点以前下单，当前出库。"
                    android:textSize="16sp"
                    />
            </RelativeLayout>
            <!-- 商品评价 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                >
                <TextView
                    android:id="@+id/tv_green_detail_pingjia_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品评价"
                    android:textSize="24sp"
                    android:textColor="@color/green_detail_price"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    />
                <View
                    android:layout_below="@+id/tv_green_detail_pingjia_t"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/divider"
                    />
                <View
                    android:layout_below="@+id/tv_green_detail_pingjia_t"
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/red"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_green_detail_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:focusable="false"
                />

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rl_green_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <View
            android:id="@+id/v_green_detail_bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:background="@color/black"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:id="@+id/rl_green_detail_telphone"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_green_detail_bottom_func"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/green_detail_bottom_iv_telphone"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:src="@mipmap/telphone"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/green_detail_bottom_iv_telphone"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:text="客服"
                            android:textSize="12sp"
                            android:textColor="#969696"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_green_detail_collection"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_green_detail_bottom_func"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/green_detail_bottom_iv_collection"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:src="@mipmap/collection"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/green_detail_bottom_iv_collection"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:text="收藏"
                            android:textSize="12sp"
                            android:textColor="#969696"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_green_detail_car"
                        android:layout_width="0dp"
                        android:layout_weight="1.0"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_green_detail_bottom_func"
                        android:clickable="true"
                        >
                        <ImageView
                            android:id="@+id/green_detail_bottom_iv_car"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:src="@mipmap/car"
                            android:layout_centerHorizontal="true"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/green_detail_bottom_iv_car"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:text="购物车"
                            android:textSize="12sp"
                            android:textColor="#969696"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="wrap_content"
                android:background="@color/green_detail_price"
                android:text="加入购物车"
                android:textColor="@color/white"
                android:textSize="20sp"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
